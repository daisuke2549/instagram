.container
  .post_card_image_tag
    - @posts.each do |post|
      .post-post_card_image_tag_title
      .post_card_image
        = image_tag 'Ellipse (2).png'
      .post_card_title_comment
        %p1 
          = current_account.accountname
        %p2
          = post.display_created_at
      .post_card_picture1
        - if post.image.attached?
          = image_tag(post.image) 
        - else
          = image_tag 'default-image-620x600.jpg'
      .post_card_picture_below
        %p1= image_tag 'Vector2.png'
        %p2= image_tag 'Vector3.png'
        .article_heart
          = image_tag 'heart.svg'
        .post_card_content
          = post.content 
